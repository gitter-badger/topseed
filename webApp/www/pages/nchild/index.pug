block top
	include ../../_part/_topS
	style.
		.cards {
			display: flex;
			flex-wrap: wrap;
		}
		.cards input[type='radio']{
			visibility:hidden;
		}
		.card {
			margin: 10px;
		}
		 .card label{
			vertical-align: top;
			margin-left: 0;
			width: 100px;
			height: 100px;
			background: green;
			display: inline-block;
		}	
		input:checked + label {
			background: yellow;
			margin-bottom: 50px;
		}
		.more {
			display: none;
			background: gray;
			position: absolute;
			z-index: 100;
			height: 50px;
			margin-top: -50px;
			left: 5%;
			width: 90%;
		}

		input:checked + label + .more {
			display: inline-block;
		}



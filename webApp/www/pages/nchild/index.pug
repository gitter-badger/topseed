extends  ../../_part/_baseShellS

block head
	include ../../_part/_headerS

block top
	include ../../_part/_topS
	style.
		.card {
			margin: 10px;
			display: inline-block;
			position: relative;
		}		
		.cards input[type='radio']{
			visibility:hidden;
		}

		 .card label{
			width: 100px;
			height: 100px;
			background: green;
			display: inline-block;
		}	
		input:checked + label {
			background: yellow;
			margin-bottom: 52px;
		}
		input:checked + label + .more {
			display: inline-block;
		}

		.more {
			display: none;
			background: red;
			position: absolute;
			z-index: 100;
			height: 50px;
			width: 100vw;
			bottom: 0;
			left: 0;

		}




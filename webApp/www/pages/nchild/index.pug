extends  ../../_part/_baseShellS

block head
	include ../../_part/_headerS

block top
	include ../../_part/_topS
	style.
		.cards {
			display: inline-block;
		}
		.cards input[type='radio']{
			visibility:hidden;
		}
		.card {
			vertical-align: top;
			width: 100px;
			height: 100px;
			background: green;
			display: inline-block;
		}	
		input:checked + label.card {
			background: yellow;
			margin-bottom: 60px;
		}
		.more {
			display: none;
			background: gray;
			margin-top: 105px;
			position: absolute;
			z-index: 100;
			height: 50px;
			left: 10px;
			width: 90%;
		}

		input:checked + label.card + .more {
			display: inline-block;
		}


block main
	.mui-container-fluid
		.cards
			input#o1(type='radio', name='card')
			label.card(for='o1') 1
			.more OK1
